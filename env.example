# Shopify API Konfiguration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-vercel-app-url.vercel.app

# OpenAI API Schlüssel
OPENAI_API_KEY=your_openai_api_key

# OAuth Scopes
SCOPES=write_products,read_products,read_orders,write_orders,read_customers

# Umgebung
NODE_ENV=development # Für Produktion auf 'production' ändern

# Datenbank (falls benötigt)
DATABASE_URL=sqlite://./database.sqlite

# Port (Vercel nutzt seinen eigenen Port in Produktion)
PORT=3000 